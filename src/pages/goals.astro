---
import BaseLayout from "../layouts/BaseLayout.astro";
import App from "../todo-app/App.jsx";
const pageTitle = "SIGNAL FOCUSED | GOAL SETTING";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="main-container">
    <App client:only="react" />
  </div>
</BaseLayout>

<style>
  .main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
  }
</style>

<style is:global>
  input[type="checkbox"] {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }

  :root {
    --bg: linear-gradient(#32a3ff, #0073c5, #2f47d1);
    --bg-alt: #2f47d1;
    --bg-rev: linear-gradient(#0073c5, #0073c5, #32a3ff);
    --bg-clear: lightblue;
    --spice: #ffcd7b;
    --text: #ffffff;
    --radial: radial-gradient(circle at bottom, #0073c5, #0073c5, #4067ba);
    --splash: linear-gradient(
      #ffffff 0%,
      #32a3ff 5%,
      #2f47d1 30%,
      #2f47d1 70%,
      #32a3ff 95%,
      #ffffff 100%
    );
    --gradient: linear-gradient(#ff9500, #f63d00);
    --halo-glow: rgba(255, 255, 255, 0.3);
    --shade: rgba(0, 0, 0, 0.6);
    --brand: orangered;
    --drop: drop-shadow(2px 10px 6px #404040);
    --dull: #818181;
    --header: linear-gradient(#0073c5, #0073c5, #2f47d1);
    --bg-base: #2f47d1;
    --card: linear-gradient(#32a3ff, #2f47d1, #2f47d1, #32a3ff);
    color: var(--text);
    background: var(--bg);
    --splash-alt: linear-gradient(
      #ffffff 10%,
      #0073c5 20%,
      #32a3ff 40%,
      #32a3ff 60%,
      #0073c5 80%,
      #ffffff 90%
    );
    --cufflinks: #ffcd7b;
  }

  :root.dark {
    --header: linear-gradient(#000000, #601309, #601309);
    --spice: #c7c5bf;
    --cufflinks: #bfa619;
  }

  .base-container {
    background-image: url(/images/poolside.jpeg);
    background-position: center;
    background-size: cover;
  }
</style>
