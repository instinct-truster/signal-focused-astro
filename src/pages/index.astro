---
import BaseLayout from '../layouts/BaseLayout.astro';
import WingTitle from '../components/WingTitle.astro';
const pageTitle = 'SIGNAL FOCUSED | HOME';
---

<BaseLayout pageTitle={pageTitle}>
  <div class="main-container">
    <WingTitle>WELCOME TO SIGNAL FOCUSED</WingTitle>
    <div class="upper-container">
      <div class="card">
        <a href="/goals">
          <img src="/images/poolside.jpeg" alt="" />
        </a>
        <div class="card-content">
          <h3>Goal Setting</h3>
          <p>Focus your strength and discipline toward action</p>
        </div>
      </div>
      <div class="card">
        <a href="/categories/digital%20entertainment">
          <img class="gaming-image" src="/images/gaming.jpg" alt="" />
        </a>
        <div class="card-content">
          <h3>Gaming Blog</h3>
          <p>Video game in-depth reviews and recommendations</p>
        </div>
      </div>
      <div class="card">
        <a href="/search">
          <img src="/images/image-search-image.avif" alt="" />
        </a>
        <div class="card-content">
          <h3>Image Search</h3>
          <p>Find just the right imagery to inspire</p>
        </div>
      </div>
      <div class="card">
        <a href="/categories/football">
          <img src="/images/fantasy-football-image.avif" alt="" />
        </a>
        <div class="card-content">
          <h3>Fantasy Football Blog</h3>
          <p>Dynasty and season long opinion and strategy</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .main-container {
    width: 100%;
    height: 100vh;
    padding: 40px;
  }

  .upper-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
    gap: 40px;
    margin-top: 40px;
  }

  .card {
    position: relative;
    width: 300px;
    height: 400px;
    border: 4px solid var(--cufflinks);
    border-radius: 20px;
    overflow: hidden;
  }

  .card img {
    cursor: pointer;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gaming-image {
    object-position: right;
    transform: scale(1.4);
  }

  .card-content {
    bottom: 0;
    left: 0;
    width: 100%;
    position: absolute;
    color: var(--text);
    line-height: 1.5rem;
    padding: 10px;
    background: rgba(0, 0, 0, 0.7);
  }

  .card-content h3 {
    font-size: 1.25rem;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 8px;
  }

  .card-content p {
    color: var(--text);
    font-size: 1rem;
    text-align: center;
  }
</style>
